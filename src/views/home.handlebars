
<div class="container fondo">


<h1 class="my-2">Almacén en construcción</h1>


    {{#each productos}}
    <div class="d-flex justify-content-center p-2">
        <div class="card text-center " style="width: 20rem;">
            <img src={{this.img}} class="card-img-top" alt={{this.img}}>
                <div class="card-body bg-light">
            <h5 class="card-title">{{this.title}}</h5>
            <p>{{_id}}</p>
            <p class="card-text">{{this.description}}</p>
            <p class="card-text">Precio: {{this.price}}</p>
            <p> Categoría: {{category}} </p>
            <form action="/api/carts/:cid/products/{{_id}}" method="post">
            <button type="submit" class="btn btn-success">Agregar al carrito</button>
            <p>{{_id}}</p>
            </form>
        </div>
        </div>
    </div>
    {{/each}}


{{#if hasPrevPage}}
    <a class="text-decoration-none bg-primary text-light px-3" href="/products?page={{prevPage}}">Anterior</a>
{{/if}}

{{#if hasNextPage}}
    <a class="text-decoration-none bg-primary text-light px-3" href="/products?page={{nextPage}}">Siguiente</a>
{{/if}}

<p class="text-light">Pagina {{currentPage}} de {{totalPages}} </p>

</div>

